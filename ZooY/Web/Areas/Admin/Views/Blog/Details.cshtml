@using Core.Constants
@using Web.Areas.Admin.ViewModels.Blog
@model BlogDetailsVM

<div class="col-lg-12 grid-margin ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Blog Details</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>DetailTitle</th>
                            <th>Text</th>
                            <th>DescriptionOne</th>
                            <th>DescriptionTwo</th>
                            <th>DescriptionThree</th>
                            <th>Paragraph</th>
                            <th>Time</th>
                            <th>MainPhoto</th>
                            <th>Photo</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Model.Id</td>
                            <td>@Model.Title</td>
                            <td>@Model.DetailTitle</td>
                            <td>@Model.Text</td>
                            <td>@Model.DescriptionOne</td>
                            <td>@Model.DescriptionTwo</td>
                            <td>@Model.DescriptionThree</td>
                            <td>@Model.Paragraph</td>
                            <td>@Model.Time</td>
                            <td><img src="~/assets/img/@Model.MainPhotoName" /></td>
                            <td><img src="~/assets/img/@Model.PhotoName" /></td>
                        </tr>
                    </tbody>
                </table>

                
                <a class="btn btn-danger" asp-action="index" asp-controller="blog">Cancel</a>

            </div>
        </div>
    </div>
</div>
