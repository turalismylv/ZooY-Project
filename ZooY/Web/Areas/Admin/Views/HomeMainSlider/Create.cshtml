@using Core.Constants
@using Web.Areas.Admin.ViewModels.HomeMainSlider
@model HomeMainSliderCreateVM





<div class="bg-secondary rounded h-100 p-4">
    <h1 style="color:#eb1616">CREATE</h1>
    <form enctype="multipart/form-data" asp-action="create" asp-controller="homemainslider" method="post">
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Title">
            <label asp-for="Title">Title</label>
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-floating mb-3">
              <label style="z-index:1" asp-for="Description">Description</label>
            <textarea class="form-control" asp-for="Description"></textarea>
          
            <span asp-validation-for="Description"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="SubDescription">
            <label asp-for="SubDescription">SubDescription</label>
            <span asp-validation-for="SubDescription"></span>
        </div>
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="LearnUrl">
            <label asp-for="LearnUrl">LearnUrl</label>
            <span asp-validation-for="LearnUrl"></span>
        </div>

        <div class="mb-3">
            <label class="form-label" asp-for="MainPhoto">MainPhoto</label>
            <input class="form-control bg-dark" class="form-control" asp-for="MainPhoto">
            <span asp-validation-for="MainPhoto"></span>
        </div>

        <button type="submit" class="btn btn-success m-2">Create</button>
        <a class="btn btn-primary m-2" asp-action="index" asp-controller="homemainslider">Cancel</a>
    </form>
</div>


@section Scripts{

    <script src="https://cdn.ckeditor.com/ckeditor5/35.4.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('#Description'))
            .catch(error => {
                console.error(error);
            });
    </script>


}
