@using Core.Constants
@using Web.Areas.Admin.ViewModels.HotDeal
@model HotDealUpdateVM

<form enctype="multipart/form-data" asp-action="update" asp-controller="hotdeal" method="post">
    <div class="form-group">
    <label asp-for="Title">Title</label>
    <textarea class="form-control" asp-for="Title"></textarea>
    <span asp-validation-for="Title"></span>
     </div>
    <div class="form-group">
    <label asp-for="Text">Text</label>
    <textarea class="form-control" asp-for="Text"></textarea>
    <span asp-validation-for="Text"></span>
     </div>
     <div class="form-group">
    <label asp-for="Time">Time</label>
   <input class="form-control" asp-for="Time">
    <span asp-validation-for="Time"></span>
     </div>

    <div class="form-group">
        <label asp-for="MainPhoto">MainPhoto</label>
        <input class="form-control" asp-for="MainPhoto">
        <span asp-validation-for="MainPhoto"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
   <a class="btn btn-danger" asp-action="index" asp-controller="hotdeal">Cancel</a>
</form>


