@using Web.Areas.Admin.ViewModels.OurHistory
@model OurHistoryIndexVM


@if (Model.OurHistory == null)
{
    <a class="btn btn-primary" asp-action="create" asp-controller="ourhistory">Create</a>
}
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>SubTitle</th>
                <th>Description</th>
                <th>CreateAt</th>
                <th>ModifiedAt</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>SubTitle</th>
                <th>Description</th>
                <th>CreateAt</th>
                <th>ModifiedAt</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </tfoot>
        <tbody>
            @if (Model.OurHistory != null)
            {
                <tr>
                    <td>@Model.OurHistory.Id</td>
                    <td>@Model.OurHistory.Title</td>
                    <td>@Model.OurHistory.SubTitle</td>
                    <td>@Model.OurHistory.Description</td>
                    <td>@Model.OurHistory.CreatedAt.ToShortDateString()</td>
                    <td>@Model.OurHistory.ModifiedAt.ToShortDateString()</td>
                    <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets/img/@Model.OurHistory.PhotoName" /></td>

                    <td>
                        <a class="btn btn-primary" asp-action="update" asp-controller="ourhistory" asp-route-id="@Model.OurHistory.Id">Update</a>
                        <form method="post" asp-action="delete" asp-controller="ourhistory" asp-route-id="@Model.OurHistory.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
