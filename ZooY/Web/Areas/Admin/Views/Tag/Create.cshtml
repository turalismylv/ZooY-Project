@using Core.Constants
@using Web.Areas.Admin.ViewModels.Tag
@model TagCreateVM



<div class="bg-secondary rounded h-100 p-4">
    <h1 style="color:#eb1616">CREATE</h1>
    <form enctype="multipart/form-data" asp-action="create" asp-controller="tag" method="post">
        <div class="form-floating mb-3">
            <input class="form-control" asp-for="Title" />
            <label asp-for="Title">Title</label>
            <span asp-validation-for="Title"></span>
        </div>
    

        <button type="submit" class="btn btn-success m-2">Create</button>
        <a class="btn btn-primary m-2" asp-action="index" asp-controller="tag">Cancel</a>
    </form>
</div>