@using Core.Constants
@using Web.Areas.Admin.ViewModels.Testimonial
@model TestimonialCreateVM

<form enctype="multipart/form-data" asp-action="create" asp-controller="testimonial" method="post">

    <label asp-for="FullName">FullName</label>
    <input asp-for="FullName" />
    <span asp-validation-for="FullName"></span>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span asp-validation-for="Description"></span>
    </div>


    <div class="form-group">
        <label asp-for="MainPhoto">MainPhoto</label>
        <input class="form-control" asp-for="MainPhoto">
        <span asp-validation-for="MainPhoto"></span>
    </div>


    <button type="submit" class="btn btn-primary">Create</button>
    <a class="btn btn-danger" asp-action="index" asp-controller="testimonial">Cancel</a>
</form>


@section Scripts{


    <script src="https://cdn.ckeditor.com/ckeditor5/35.2.1/classic/ckeditor.js"></script>
    <script>
        const properties = ["Description"];

        properties.forEach(function myFunction(e) {

            ClassicEditor
                .create(document.querySelector(`#${e}`))
                .then(editor => {
                    console.log(editor);
                })
                .catch(error => {
                    console.error(error);
                });
        })
    </script>
}
