@using Web.Areas.Admin.ViewModels.Welcome
@model WelcomeIndexVM


@if (Model.Welcome == null)
{
    <a class="btn btn-primary" asp-action="create" asp-controller="welcome">Create</a>
}
<div class="table-responsive">
    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
        <thead>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Title</th>
                <th>Description</th>
                <th>Text</th>
                <th>CreateAt</th>
                <th>ModifiedAt</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th>Id</th>
                <th>FullName</th>
                <th>Title</th>
                <th>Description</th>
                <th>Text</th>
                <th>CreateAt</th>
                <th>ModifiedAt</th>
                <th>Photo</th>
                <th>Actions</th>
            </tr>
        </tfoot>
        <tbody>
            @if (Model.Welcome != null)
            {
                <tr>
                    <td>@Model.Welcome.Id</td>
                    <td>@Model.Welcome.FullName</td>
                    <td>@Html.Raw(Model.Welcome.Title)</td>
                    <td>@Model.Welcome.Description</td>
                    <td>@Model.Welcome.Text</td>
                    <td>@Model.Welcome.CreatedAt.ToShortDateString()</td>
                    <td>@Model.Welcome.ModifiedAt.ToShortDateString()</td>
                    <td><img class="img-thumbnail" style="width:50px ; height:50px; object-fit:cover" src="~/assets/img/@Model.Welcome.PhotoName" /></td>

                    <td>
                        <a class="btn btn-primary" asp-action="update" asp-controller="welcome" asp-route-id="@Model.Welcome.Id">Update</a>
                        <form method="post" asp-action="delete" asp-controller="welcome" asp-route-id="@Model.Welcome.Id">
                            <button type="submit" class="btn btn-danger">Delete</button>
                        </form>
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
